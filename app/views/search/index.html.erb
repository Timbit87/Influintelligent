<div class="container">
  <h1 class="my-4">Search Results for <strong>'<%= @query %>'</strong></h1>
  <% brands = @users.select(&:brand?) %>
  <% influencers = @users.reject(&:brand?) %>
  <% unless influencers.empty? %>
    <div class="my-4">
      <h2 class="my-4">Influencers:</h2>
      <div class="row">
        <% influencers.each do |influencer| %>
          <%= render 'components/influencers_card', influencer: influencer %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="my-4">
    <% unless brands.empty? %>
      <h2 class="my-4">Brands:</h2>
      <div class="row">
        <% brands.each do |brand| %>
          <%= render 'components/brand_card', brand: brand %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="my-4">
    <% if @collaborations.present? %>
      <h2 class="my-4">Collaborations:</h2>
      <div class="row">
        <% @collaborations.each do |collaboration| %>
          <%= render 'components/collaboration_card', collaboration: collaboration %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-start my-4">
    <%= link_to 'Back', (request.referrer || collaborations_path), class: "btn-secondary-sm ms-2" %>
  </div>
</div>
