<div class="banner-top" style="background-image: url('<%= asset_path('new-collab-bg.png') %>')">
  <div class="container mt-4">
    <div class="row d-flex justify-content-center">
      <div class="col-md-10">
        <h2 class="my-4">Create a new collaboration</h2>
        <%= simple_form_for @collaboration, html: { multipart: true } do |f| %>
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :description %>
          <div class="d-flex">
            <div class="col-md-6 me-2">
              <%= f.input :start_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
            </div>
            <div class="col-md ms-2">
              <%= f.input :end_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
            </div>
          </div>
          <div class="form-group my-4 pb-4">
            <%= f.label :category %><br>
            <% @categories.each do |category| %>
              <div class="form-check form-check-inline mt-2">
                <%= f.check_box :category, { multiple: true, class: 'form-check-input' }, category, nil %>
                <%= f.label :category, category, class: 'form-check-label' %>
              </div>
            <% end %>
          </div>
          <%= f.input :banner, label: 'Upload a Banner (optional)', as: :file %>
          <div class="submit-form my-4 pt-4 text-center">
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="d-flex justify-content-start mt-4 pt-4">
      <%= link_to 'Back', (request.referrer || collaborations_path), class: "btn-secondary-sm ms-2" %>
    </div>
  </div>
</div>