<div class="col-md-4 mb-4">
  <div class="collaboration-card">
    <div class="d-flex justify-content-between">
      <h4 class="col-md-9"><%= influencer.first_name %> <%= influencer.last_name %></h4>
      <div class="row m-0 p-0 d-flex">
        <small class="col-md m-0 p-0 text-end">
          <br>
          <%= influencer.email %></small>
      </div>
    </div>
    <div class="price d-flex align-items-center">
      <p>placeholder yen area</p>
      <p class="align-items-center ms-2">placeholder</p>
    </div>
    <div class="description mt-4 d-flex pe-2">
      <i class="fa-solid fa-quote-left me-2"></i>
      <div class="text-truncate">
        <%= influencer.about %>
      </div>
      <div class="fade-overlay"></div>
    </div>
    <div class="tags mt-2">
    </div>
    <div class="mt-4 created_by">
      <p>Visit their profile:</p>
        <%= link_to user_path(influencer) do %>
          <% if influencer.avatar.present? %>
            <%= image_tag influencer.avatar, class: "me-2 avatar" %>
          <% else %>
            <%= image_tag 'user-photo.png', class: "me-2 avatar" %>
          <% end %>
        <% end %>
    </div>
    <div class="see-more-link mt-2 d-flex justify-content-end card-button">
      <%= link_to 'See More', user_path(influencer) %>
    </div>
  </div>
</div>
