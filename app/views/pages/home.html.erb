  <% if user_signed_in? %>
  <div class="mb-2">
    <%= render 'components/banner_home', logged_in: true %>
  </div>
  <div class="container">
    <div class="p-2 card-body my-4">
      <h2>Hello <strong><%= current_user.first_name.capitalize %></strong>!</h2>
      <h3>Here are some recently added collaborations:</h3>
    </div>
    <div class="d-flex flex-row flex-nowrap overflow-auto">
      <% @collaborations.sort_by{ |i| - i.created_at.to_i }.first(5).each  do |collaboration| %>
        <%= render 'components/landing_card', collaboration: collaboration %>
      <% end %>
    </div>
  <% else %>
    <%= render 'components/banner_home', logged_in: false %>
  <% end %>
</div>
